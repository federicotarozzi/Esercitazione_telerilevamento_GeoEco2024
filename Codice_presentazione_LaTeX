\vspace{1cm} % Aggiunge uno spazio verticale per distanziare la formula dalle immagini
\begin{center}
\[
\text{NDVI} = \frac{\text{NIR} - \text{RED}}{\text{NIR} + \text{RED}}
\]
\end{center}

\end{frame}


